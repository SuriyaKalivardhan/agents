{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "variables": {
        "suffix": "0"
    },
    "parameters": {
        "name": {
            "type": "String",
            "defaultValue": "[concat('suriyakapp', '-',  variables('suffix'))]"
        },
        "location": {
            "type": "String",
            "defaultValue": "eastus2euap"
        },
        "infrasubnetid": {
            "type": "string"
        },
        "customersubnetid": {
            "type": "string"
        },
        "platformsub": {
            "type": "string"
        },
        "platformrg": {
            "type": "string"
        },
        "platformvnet": {
            "type": "string"
        },
        "platcustomersubnet": {
            "type": "string"
        },
        "platcustomersubnetcidr": {
            "type": "string"
        }
    },
    "resources": [
        {
            "type": "Microsoft.App/managedEnvironments",
            "apiVersion": "2024-02-02-preview",
            "name": "[parameters('name')]",
            "location": "[parameters('location')]",
            "tags": {
                "internal.containerapps.host-type": "shared",
                "internal.containerapps.resource-owner": "suriyak-test"
            },
            "dependsOn": [
                "test1"
            ],
            "properties": {
                "workloadProfiles": [
                    {
                        "name": "Consumption",
                        "workloadProfileType": "Consumption"
                    }
                ],
                "vnetConfiguration": {
                    "infrastructureSubnetId": "[parameters('infrasubnetid')]"
                },
                "firstPartyConfiguration": {
                    "customerSubnetId": "[parameters('customersubnetid')]"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2022-09-01",
            "name": "test1",
            "subscriptionId": "[parameters('platformsub')]",
            "resourceGroup": "[parameters('platformrg')]",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "resources": [
                        {
                            "type": "Microsoft.Network/virtualNetworks/subnets",
                            "apiVersion": "2023-11-01",
                            "name": "[concat(parameters('platformvnet'), '/', parameters('platcustomersubnet'))]",
                            "properties": {
                                "addressPrefix": "[parameters('platcustomersubnetcidr')]",
                                "delegations": [
                                    {
                                        "name": "Delegation for test1",
                                        "properties": {
                                            "serviceName": "Microsoft.App/environments"
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        }
    ],
    "outputs": {}
}